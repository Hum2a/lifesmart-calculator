{
  "name": "lifesmart-calculator",
  "version": "1.0.0",
  "description": "Professional financial and life planning calculator tool built with React, TypeScript, and Tailwind CSS",
  "keywords": [
    "calculator",
    "financial",
    "planning",
    "react",
    "typescript",
    "tailwind",
    "pwa"
  ],
  "author": "LifeSmart Calculator Team",
  "license": "MIT",
  "homepage": "https://lifesmart-calculator.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/lifesmart-calculator.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/lifesmart-calculator/issues"
  },
  "private": false,
  "type": "module",
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "chart.js": "^4.5.0",
    "react": "^19.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.2.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,md,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,css,md,json}\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf build dist",
    "bundle-analyzer": "npx webpack-bundle-analyzer build/static/js/*.js",
    "lighthouse": "npx @lhci/cli autorun",
    "serve": "serve -s build -l 3000",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "deps:check": "npm-check-updates",
    "deps:update": "npm-check-updates -u && npm install",
    "deps:audit": "npm audit",
    "deps:audit:fix": "npm audit fix",
    "bundle-size": "bundlesize",
    "pre-commit": "npm run lint && npm run format:check && npm run type-check && npm test -- --passWithNoTests"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@lhci/cli": "^0.12.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.6.2",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "bundlesize": "^0.18.1",
    "eslint-plugin-react-hooks": "^6.1.1",
    "eslint-plugin-react-refresh": "^0.4.23",
    "jsdom": "^27.0.0",
    "npm-check-updates": "^17.1.15",
    "playwright": "^1.48.2",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "serve": "^14.2.4",
    "tailwindcss": "^3.4.18",
    "typescript": "^4.9.5",
    "vite": "^7.1.9",
    "vitest": "^3.2.4",
    "webpack-bundle-analyzer": "^4.10.1"
  }
}
